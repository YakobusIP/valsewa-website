[Unit]
Description=Backend cron job %i
Wants=network-online.target
After=network-online.target

[Service]
Type=oneshot
User=deploy

# Prevent overlapping runs of the SAME job instance
ExecStart=/usr/bin/flock -n /run/lock/backend-cron-%i.lock \
  /opt/schedulers/scheduler-post-request.sh

# Safe defaults
NoNewPrivileges=true
PrivateTmp=true